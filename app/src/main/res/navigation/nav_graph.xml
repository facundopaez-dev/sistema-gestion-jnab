<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ebcf.jnab.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_assistantFragment"
            app:destination="@id/assistantFragment" />
        <action
            android:id="@+id/action_loginFragment_to_organizerFragment"
            app:destination="@id/organizerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_speakerFragment"
            app:destination="@id/speakerFragment" />
    </fragment>
    <fragment
        android:id="@+id/assistantFragment"
        android:name="com.ebcf.jnab.ui.assistant.AssistantFragment"
        android:label="fragment_assistant"
        tools:layout="@layout/fragment_assistant" />
    <fragment
        android:id="@+id/organizerFragment"
        android:name="com.ebcf.jnab.ui.organizer.OrganizerFragment"
        android:label="fragment_organizer"
        tools:layout="@layout/fragment_organizer" />
    <fragment
        android:id="@+id/speakerFragment"
        android:name="com.ebcf.jnab.ui.speaker.SpeakerFragment"
        android:label="fragment_speaker"
        tools:layout="@layout/fragment_speaker" />

</navigation>